<h1>goodtunes homepage</h1>

<div id="user-widget">
  <% if current_user %>
    Welcome <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
    <%= link_to "Edit my profile", edit_user_path(current_user) %>
    

    <% else %>
      <p><%= link_to "Sign in with Facebook as a RUNNER", "/auth/facebook?runner=true", id: "sign_in" %></p>
      <p><%= link_to "Sign in with Facebook to donate", "/auth/facebook", id: "sign_in" %></p>
    <% end %>
</div>