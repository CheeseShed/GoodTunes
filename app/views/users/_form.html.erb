<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <% if !current_user.isRunner %>
    <p>you are signed-in to donate.</p>
    <div class="field">
      <%= f.label "do you want to sign up as a runner too?" %><br>
      <%= f.check_box :isRunner %>
    </div>
  <% else %>
    <p>you are signed in as a runner</p>
    <p><%= link_to 'add a race', new_race_path %></p>
    <p><%= link_to 'see my race playlists', user_path(current_user.id) %></p>   
  <% end %>  

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
